        <TextBlock x:Name="ArticleLinkText" Foreground="Blue" Text="https://www.foxnews.com/politics/biden-administration-defends-removing-churchill-statue-from-oval-office" TextWrapping="WrapWholeWords" Width="431" Margin="44,97,44,28"/>

    </Grid>
</UserControl>
